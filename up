#!/bin/bash

# Default AUR helper
aurhelper=/usr/bin/aurman

# Source config file
[[ -f /etc/up.conf ]] && . /etc/up.conf

# Upgrade
if hash $aurhelper 2>/dev/null
then
	if [ $USER == 'root' ]
	then
		pacman -Syu
	else
		echo Using AUR helper $aurhelper
		aurman -Syu
	fi
else 
	echo AUR helper $aurhelper not found - using pacman
	if [ $USER == 'root' ]
	then
		pacman -Syu
	else
		sudo pacman -Syu
	fi
fi
